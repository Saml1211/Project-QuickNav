    {
      "type": "photos",
      "label": "Site Photos",
      "folders": ["6. Site Photos"],
      "exts": [".jpg", ".jpeg", ".png", ".heic", ".tiff"],
      "thumbs": true,
      "priority": 60
    }
  ],
  "ranking_weights": {
    "match_project_code": 5.0,
    "in_preferred_folder": 2.0,
    "not_in_archive_or_old": 1.5,
    "status_as_built": 2.0,
    "status_signed": 1.5,
    "status_draft": -0.5,
    "archive_penalty": -2.0,
    "newer_version": 3.0,
    "newer_date": 1.0,
    "room_match": 1.5,
    "ext_preference": 0.5
  },
  "date_parse_defaults": {
    "day_first": true,
    "y2k_window": 1970
  },
  "gui_settings": {
    "auto_hide_delay": 1.5,
    "dpi_scaling": true,
    "thumbnail_size": 100,
    "max_search_results": 20
  },
  "performance": {
    "max_scan_depth": 5,
    "scan_timeout": 30.0,
    "cache_enabled": true,
    "cache_duration": 60
  }
}